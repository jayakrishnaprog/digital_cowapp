<configuration>
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <!--  <file>/var/lib/tomcat10/logs/my-application.log</file> <!-- Specify the path to your log file -->
      <file>D:/java/my-application.log</file>  
        <append>true</append>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="FILE"/>
    </root>
</configuration>
